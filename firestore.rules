
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the application settings.
    // This is for demonstration purposes only.
    // In a real application, you would want to implement authentication
    // and secure your data properly.
    match /settings/{docId} {
      allow read, write: if true;
    }
  }
}
